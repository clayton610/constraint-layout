<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/celular" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Aprenda sobre edição de imagens"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/titulo_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="27/07/2022"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/titulo"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/button_anterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/purple_700"
        android:text="Anterior"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_proximo"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="1.0" />


    <Button
        android:id="@+id/button_proximo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/purple_700"
        android:text="Próximo"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Na vida tudo é passageiro, menos o motorista e o cobrador…. O álcool é o maior inimigo do homem... e o homem que foge de seus inimigos é um covarde!. A vida é uma vai e vem que não tem volta.. Thank you for using my words in your work. O importante é o que importa..  I have a moral code, but I haven't figured out how to read it yet. Qual é o diminutivo de golfinho?. O álcool é o maior inimigo do homem... e o homem que foge de seus inimigos é um covarde!. O povo unido é gente pra caramba.. O povo unido é gente pra caramba..  O dinheiro não traz felicidade, então, dê todo o seu pra mim e seja feliz.. Cemeteries are just garbage dumps filled with humans. A vida é uma sucessão de sucessivos que sucedem sucessivamente sem cessar.. O sonho não acabou. E ainda temos pão doce, maria-mole e queijadinha.. O sonho não acabou. E ainda temos pão doce, maria-mole e queijadinha..  Sonhar que está comendo uma maria-mole gigante pode significar acordar sem o travesseiro!. Onde quer que você esteja você sempre estará lá.. A vida é uma sucessão de sucessivos que sucedem sucessivamente sem cessar.. Qual é o diminutivo de golfinho?. Há males que vêm para o pior..  Eu sem mim não existo.. O sol nasce, a bicicleta anda, o lobo uiva e o urso panda.."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Clayton Barbosa"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_anterior"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>